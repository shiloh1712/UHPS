@page
@model UHPostalService.Pages.QuoteModel
@{




    <h1>New Package</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">  

    <h2>Package Details</h2>
           
            
            <div class="form-group">
                <label asp-for="Package.Weight" class="control-label"></label>
                <input asp-for="Package.Weight" class="form-control" />
                <span asp-validation-for="Package.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Height" class="control-label"></label>
                <input asp-for="Package.Height" class="form-control" />
                <span asp-validation-for="Package.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Width" class="control-label"></label>
                <input asp-for="Package.Width" class="form-control" />
                <span asp-validation-for="Package.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Depth" class="control-label"></label>
                <input asp-for="Package.Depth" class="form-control" />
                <span asp-validation-for="Package.Depth" class="text-danger"></span>
            </div>
           
            
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Package.Express" /> @Html.DisplayNameFor(model => model.Package.Express)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}
