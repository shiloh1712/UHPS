@page
@model UHPostalService.Pages.Shipments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>New Package</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>Sender</h2>
            <div class="form-group">
                <label asp-for="From.Name" class="control-label"></label>
                <input asp-for="From.Name" class="form-control" />
                <span asp-validation-for="From.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="From.PhoneNumber" class="control-label"></label>
                <input asp-for="From.PhoneNumber" class="form-control" />
                <span asp-validation-for="From.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="From.Email" class="control-label"></label>
                <input asp-for="From.Email" class="form-control" />
                <span asp-validation-for="From.Email" class="text-danger"></span>
            </div>
            <hr />
            <h2>Receiver</h2>
            <div class="form-group">
                <label asp-for="To.Name" class="control-label"></label>
                <input asp-for="To.Name" class="form-control" />
                <span asp-validation-for="To.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="To.PhoneNumber" class="control-label"></label>
                <input asp-for="To.PhoneNumber" class="form-control" />
                <span asp-validation-for="To.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="To.Email" class="control-label"></label>
                <input asp-for="To.Email" class="form-control" />
                <span asp-validation-for="To.Email" class="text-danger"></span>
            </div>
            <hr />
            <h2>Destination</h2>
            <div class="form-group">
                <label asp-for="Address.StreetAddress" class="control-label"></label>
                <input asp-for="Address.StreetAddress" class="form-control" />
                <span asp-validation-for="Address.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.City" class="control-label"></label>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.State" class="control-label"></label>
                <input asp-for="Address.State" class="form-control" />
                <span asp-validation-for="Address.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Zipcode" class="control-label"></label>
                <input asp-for="Address.Zipcode" class="form-control" />
                <span asp-validation-for="Address.Zipcode" class="text-danger"></span>
            </div>
            <hr />
           <h2>Package Details</h2>
           
            <div class="form-group">
                <label asp-for="Package.Description" class="control-label"></label>
                <input asp-for="Package.Description" class="form-control" />
                <span asp-validation-for="Package.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Weight" class="control-label"></label>
                <input asp-for="Package.Weight" class="form-control" />
                <span asp-validation-for="Package.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Height" class="control-label"></label>
                <input asp-for="Package.Height" class="form-control" />
                <span asp-validation-for="Package.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Width" class="control-label"></label>
                <input asp-for="Package.Width" class="form-control" />
                <span asp-validation-for="Package.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Depth" class="control-label"></label>
                <input asp-for="Package.Depth" class="form-control" />
                <span asp-validation-for="Package.Depth" class="text-danger"></span>
            </div>
           
            
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Package.Express" /> @Html.DisplayNameFor(model => model.Package.Express)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
