<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UHPostalService</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#00ffff">    
    <link rel="stylesheet" href="~/UHPostalService.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="background navbar navbar-dark navbar-expand-sm navbar-toggleable-sm navbar-light bg-red border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">UHPS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin") || (User.IsInRole("Supervisor")) || (User.IsInRole("Employee")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Account/Employees/Index">Employees</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Shop/Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Stores/Index">Stores</a>
                        </li>
                        @if (User.IsInRole("Admin") || (User.IsInRole("Supervisor")) || (User.IsInRole("Employee")) || (User.IsInRole("Customer")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Shipments/Index">Shipments</a>
                        </li>}
                        
                        @if (User.IsInRole("Admin") || (User.IsInRole("Supervisor")) || (User.IsInRole("Employee")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Sales/Index">Sales</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin") || (User.IsInRole("Supervisor")) || (User.IsInRole("Employee")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Account/Customers/Index">Customers</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Quote">Get a Quote</a>
                        </li>
                    </ul>
                    <div class="nav-item">
                        <form class="form-inline" method="get" asp-page="/Shipments/Details">
                            <input class="form-control mr-sm-2" aria-label="Search" type="text" name="Id" placeholder="Tracking Number">
                            <input hidden class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Search" />
                            
                        </form> 
                    </div>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - UHPostalService - <a href="https://github.com/shiloh1712/UHPS">Company Secrets</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>