<!DOCTYPE html>

<ul class="navbar-nav">
    <div class="nav-item">
        <form class="form-inline" method="get" asp-page="/Shipments/Details">
            <p>
                <input class="form-control mr-sm-2" aria-label="Search" type="text" name="Id" placeholder="Tracking Number">
                <input hidden class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Search" />
            </p>
        </form> 
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item text-white">
            Hello @User.Identity.Name!
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
            </form>
        </li>
    }
    else
    {
        <div class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-page="/Account/Customers/Create">Register</a>
        </div>
        <div class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-page="/Account/Customers/Login">Login</a>
        </div>
    }
</ul>