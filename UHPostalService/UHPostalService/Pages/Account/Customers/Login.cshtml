@page
@model UHPostalService.Pages.Account.Customers.LoginModel
@{
    ViewData["Title"] = "Customer Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SignInUser.Email"></label>
                    <input asp-for="SignInUser.Email" class="form-control" />
                    <span asp-validation-for="SignInUser.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SignInUser.Password"></label>
                    <input asp-for="SignInUser.Password" class="form-control" />
                    <span asp-validation-for="SignInUser.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                    <a asp-page="/Account/Employees/Login" class="btn btn-primary">Employee?</a>
                </div>
            </form>
        </section>
    </div>
</div>
 
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}