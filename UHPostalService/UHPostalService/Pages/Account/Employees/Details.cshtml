@page
@model UHPostalService.Pages.Account.Employees.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employees</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Address)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Address.StreetAddress), @Html.DisplayFor(model => model.Employee.Address.City), @Html.DisplayFor(model => model.Employee.Address.State), @Html.DisplayFor(model => model.Employee.Address.Zipcode)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Store)
        </dt>

        <dd class="col-sm-10">
            @if (@Model.Employee.StoreID != null)
            {
                <a asp-page="/Stores/Details" asp-route-id="@Model.Employee.StoreID">#@Html.DisplayFor(model => model.Employee.StoreID)</a>
            }
            else
            {
                <span>(Unassigned)</span>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Role)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
