@page
@model UHPostalService.Pages.Account.Employees.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.Id" />
            <input type="hidden" asp-for="Employee.Address" />
            <input type="hidden" asp-for="Employee.Store" />

            <div class="form-group">
                <label asp-for="Employee.Name" class="control-label"></label>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PhoneNumber" class="control-label"></label>
                <input asp-for="Employee.PhoneNumber" class="form-control" />
                <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Password" class="control-label"></label>
                <input asp-for="Employee.Password" class="form-control" />
                <span asp-validation-for="Employee.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.AddressID" class="control-label"></label>
                <select asp-for="Employee.AddressID" class="form-control" asp-items="ViewBag.AddressID"></select>
                <span asp-validation-for="Employee.AddressID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.StoreID" class="control-label"></label>
                <select asp-for="Employee.StoreID" class="form-control" asp-items="ViewBag.StoreID"></select>
                <span asp-validation-for="Employee.StoreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Role" class="control-label"></label>
                <input asp-for="Employee.Role" class="form-control" />
                <span asp-validation-for="Employee.Role" class="text-danger"></span>
            </div>
            <div>
                <a asp-page="/Addresses/Edit" asp-route-id="@Model.Employee.AddressID">Edit Address</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
