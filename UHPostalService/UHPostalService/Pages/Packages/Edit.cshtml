@page
@model UHPostalService.Pages.Packages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Package.Id" />
            <div class="form-group">
                <label asp-for="Package.SenderID" class="control-label"></label>
                <select asp-for="Package.SenderID" class="form-control" asp-items="ViewBag.SenderID"></select>
                <span asp-validation-for="Package.SenderID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.ReceiverID" class="control-label"></label>
                <select asp-for="Package.ReceiverID" class="form-control" asp-items="ViewBag.ReceiverID"></select>
                <span asp-validation-for="Package.ReceiverID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.AddressID" class="control-label"></label>
                <input asp-for="Package.AddressID" class="form-control" />
                <span asp-validation-for="Package.AddressID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Description" class="control-label"></label>
                <input asp-for="Package.Description" class="form-control" />
                <span asp-validation-for="Package.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Status" class="control-label"></label>
                <select asp-for="Package.Status" class="form-control"></select>
                <span asp-validation-for="Package.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package.Weight" class="control-label"></label>
                <input asp-for="Package.Weight" class="form-control" />
                <span asp-validation-for="Package.Weight" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Package.Express" /> @Html.DisplayNameFor(model => model.Package.Express)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Package.ShipCost" class="control-label"></label>
                <input asp-for="Package.ShipCost" class="form-control" />
                <span asp-validation-for="Package.ShipCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
