@page
@model UHPostalService.Pages.Tracking.DetailsModel

@{
    ViewData["Title"] = "Tracking Details";
}

<h1>Tracking Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingRecord.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrackingRecord.Employee.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingRecord.Package)
        </dt>
        <dd class="col-sm-10">
            <a asp-page="/Shipments/Details" asp-route-id="@Model.TrackingRecord.TrackNum">@Html.DisplayFor(model => model.TrackingRecord.Package.Id)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingRecord.Store)
        </dt>
        <dd class="col-sm-10">
            <a asp-page="/Stores/Details" asp-route-id="@Model.TrackingRecord.StoreId">@Html.DisplayFor(model => model.TrackingRecord.StoreId)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingRecord.TimeIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrackingRecord.TimeIn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingRecord.TimeOut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrackingRecord.TimeOut)
        </dd>
        <dt class="col-sm-2">
            Next Stop
        </dt>
        @if (@Model.TrackingRecord.Destination != null)
        {
            <dd class="col-sm-10">
                @Model.TrackingRecord.Address.ToString()
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.TrackingRecord.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>