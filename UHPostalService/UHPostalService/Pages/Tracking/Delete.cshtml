@page
@model UHPostalService.Pages.Tracking.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TrackingRecord</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingRecord.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrackingRecord.Employee.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingRecord.Package)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrackingRecord.Package.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingRecord.Store)
        </dt>
        <dd class="col-sm-10">
            #@Html.DisplayFor(model => model.TrackingRecord.Store.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingRecord.TimeIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrackingRecord.TimeIn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingRecord.TimeOut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrackingRecord.TimeOut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrackingRecord.Address)
        </dt>
        @if (@Model.TrackingRecord.Destination != null)
        {
            <dd class="col-sm-10">
                @Model.TrackingRecord.Address.ToString()
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="TrackingRecord.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
